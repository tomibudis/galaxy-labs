{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es5"],
    "module": "esNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./lib",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "#constants/*": ["./src/constants/*"],
      "#interface/*": ["./src/interface/*", "./interface/*"]
    }
  },
  "exclude": ["node_modules", "./node_modules", "./node_modules/*", "**/lib/", "src/components/**/*.test.tsx", "src/components/**/*.stories.tsx"],
  "include": ["./src"]
}
